{
  "presets": [
    "@babel/preset-env"
  ],
  "plugins": [
    [
      "@babel/transform-runtime"
    ],
    [
      "prismjs",
      {
        "languages": [
          "javascript",
          "php",
          "markup",
          "json",
          "css",
          "yaml",
          "twig",
          "sql",
          "ts",
        ],
        "plugins": [
          "line-numbers"
        ],
        "theme": "okaidia",
        "css": true
      }
    ]
  ],
  "env": {
    "test": {
      "plugins": [
        "istanbul",
        "transform-html-import-to-string"
      ]
    }
  }
}